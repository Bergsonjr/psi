@model IEnumerable<aa.Models.Tarefa>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar tarefa", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCriacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="tarefa_@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            @{
                string data = item.DataCriacao.ToShortDateString();
            }
            <td>
                @Html.DisplayFor(modelItem => data)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                <a href="javascript:ExcluirTarefa(@item.Id)">Deletar</a>
            </td>
        </tr>
    }

</table>

<div id="alertasucesso" style="display:none">
    <div class="alert alert-success" role="alert">
        Tarefa excluida com sucesso!
    </div>
</div>

<div id="alertaerro" style="display:none">
    <div class="alert alert-danger" role="alert">
        Erro ao excluir tarefa!
    </div>
</div>


<script>
    function ExcluirTarefa(TarefaId) {
        var r = confirm("Deseja realmente excluir essa tarefa?");
        if (r == true) {
            $.ajax({
                url: "/Tarefa/DeleteConfirmed/" + TarefaId,
                method: "POST",
                success: function () {
                    $("#tarefa_" + TarefaId).remove();
                    $('#alertasucesso').show();
                    setTimeout(function () { $('#alertasucesso').hide(); }, 2500);
                },
                error: function () {
                    $('#alertaerro').show();
                    setTimeout(function () { $('#alertaerro').hide(); }, 2500);
                }


            });

        }
    }
</script>